{
  "name": "playwright-cucumber-automation",
  "version": "1.0.0",
  "description": "Playwright + Cucumber automation framework for SauceDemo",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js --config .cucumberrc.js",
    "test:smoke": "cucumber-js --config .cucumberrc.js --tags @smoke",
    "test:regression": "cucumber-js --config .cucumberrc.js --tags @regression",
    "test:parallel": "cucumber-js --config .cucumberrc.js --parallel 2",
    "report": "open test-results/cucumber-report.html",
    "report:html": "open test-results/cucumber-report.html",
    "test:ui": "cucumber-js --config .cucumberrc.js",
    "test:headless": "HEADLESS=true cucumber-js --config .cucumberrc.js",
    "docker:build": "docker build -t playwright-cucumber-automation .",
    "docker:run": "docker run --rm playwright-cucumber-automation"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1",
    "playwright": "^1.39.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.0",
    "@cucumber/pretty-formatter": "^1.0.1",
    "@playwright/test": "^1.39.0",
    "@types/node": "^20.8.9",
    "allure-commandline": "^2.24.1",
    "allure-cucumberjs": "^3.4.2",
    "allure-playwright": "^2.9.2",
    "glob": "^13.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
